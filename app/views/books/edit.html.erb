<!DOCTYPE html!>
<html>
<head>
  <title>Bookers2</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>


<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>

    <div class="field row">
      <h4>Title</h4><br>
      <%= f.text_field :book_title, autofocus: true, class: "col-xs-12 book_title" %>
      </div>

    <div class="field row">
      <h4>Opinion</h4><br>
      <%= f.text_field :book_body, class: "col-xs-12 book_body" %>
      </div>

      <div class="actions row">
      <%= f.submit "Update Book", class: "btn btn btn-primary col-xs-12" %>
      </div>
      <% end %>

      <%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %> | <%= link_to "Back", books_path, class: "back" %>


      </div>
    </div>
  </div>
</body>
<footer class="container">
<div class="row">
<div class="col-xs-3 col-xs-offset-9">
<p>CopyRight Infratop.inc</p>
</div>
<div>
</footer>
</body>
</html>