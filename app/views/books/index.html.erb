<!DOCTYPE html!>
<html>
<head>
  <title>Bookers2</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
     <h2>User info</h2>
      <table class="table">
    	<tr><%= attachment_image_tag @user, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></tr>
    	<tr>
    		<th>name</th>
    		<th><%= @user.name %></th>
    	</tr>
    	<tr>
    		<th>introduction</th>
    		<th><%= @user.introduction %></th>
    	</tr>
     </table>
    	<%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-block btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>

    	<h2>New book</h2>
      <%= form_for(@book) do |f| %>
    	<h4>Title</h4>
    	<%= f.text_field :book_title, class: "book_title" %>

    	<h4>Option</h4>
    	<%= f.text_area :book_body, class: "book_body" %>

    	<%= f.submit 'Create Book' %>
    	<% end %>
    </div>

    <div class="col-xs-9">
    	<h2>Books</h2>
    	<table class="table">
      <thead>
    		<tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
    			<td><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
    			<td><%= link_to book.book_title, book_path(book), class: "book_#{book.id}" %></td>
    			<td><%= book.book_body %></td>
    		</tr>
        <% end %>
        </tbody>
    	</table>
    </div>
    		</div>
    	</div>
    </div>

<footer class="container">
<div class="row">
<div class="col-xs-3 col-xs-offset-9">
<p>CopyRight Infratop.inc</p>
</div>
<div>
</footer>
</body>
</html>