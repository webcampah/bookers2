<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if user_signed_in? %>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
   </div>
   <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home user_#{current_user}" %></li>
      <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-user users" %></li>
      <li><%= link_to "Books", books_path, class: "glyphicon glyphicon-book books" %></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-in sign_in" %></li>
    </ul>
  </div>
</nav>


  <% else %>

  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
   </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", root_path, class: "glyphicon glyphicon-home home" %></li>
      <li><%= link_to "About", top_about_path, class: "glyphicon glyphicon-link about" %></li>
      <li><%= link_to "Sign Up", new_user_registration_path, class: "glyphicon glyphicon-user sign_up" %></li>
      <li><%= link_to "Login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
    </ul>
  </div>
</nav>

  <% end %>

    <%= yield %>
  <footer class="container">
   <div class="row">
   <div class="col-xs-3 col-xs-offset-9">
   <p>CopyRight Infratop.inc</p>
</div>
</div>
</footer>
  </body>
</html>
